.sign-in-page
  .sign-in-page__contents
    %h2.sign-in-page__contents__title ログインする
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .sign-in-field
        .sign-in-field__label
          = f.label :email, "email"
        .sign-in-field__input
          = f.email_field :email, autofocus: true, class:"sign-in-field__input__form"
      .sign-in-field
        .sign-in-field__label
          = f.label :password, "パスワード"
        .sign-in-field__input
          = f.password_field :password, class:"sign-in-field__input__form"
      - if devise_mapping.rememberable?
        .field-remember-me
          = f.check_box :remember_me
          = f.label :remember_me, "パスワードを記憶"
      .actions
        = f.submit "ログイン", class: "submit-btn"
    = render "devise/shared/links"
